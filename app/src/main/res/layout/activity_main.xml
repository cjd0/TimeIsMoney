<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time_is_money"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayoutMainManual"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spMainSalaryType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/a_spinner_allowing_the_user_to_choose_between_the_different_types_of_salary_they_have_stored_in_the_settings"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="39dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMainTitle"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayoutMainManual"/>
    <LinearLayout
        android:id="@+id/LinearLayoutMainManual"
        android:layout_width="445dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMainTitle"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayoutMainRecord">

        <TextView
            android:id="@+id/tvMainManualTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manual_input" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etMainManualInputMins"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/enter_number_of_minutes"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textColorHint="#757575" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvMainManualDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnMainManualSubmit"
            android:layout_width="411dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/submit"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutMainRecord"
        android:layout_width="412dp"
        android:layout_height="517dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayoutMainManual">

        <TextView
            android:id="@+id/tvMainRecordTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recorded_input" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMainRecord"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/record" />

            <Button
                android:id="@+id/btnMainStop"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stop" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMainRecordTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvMainRecordValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>